@using ElectronicLearn.Core.Convertors;
@using System.Security.Claims;
@model ElectronicLearn.Core.DTOs.UserInformationViewModel
@{
    ViewData["Title"] = "پنل کاربری " + User.Identity.Name;
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="">الکترونیک لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">پنل کاربری</li>
    </ul>
</nav>

<div class="user-account">
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12">
            <partial name="_UserPanelSidebarPartial"/>
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
            <section class="user-account-content">
                <header><h1> داشبورد </h1></header>
                <div class="inner">
                    <div class="account-information">
                        <h3> اطلاعات کاربری </h3>
                        <ul>
                            <li> <i class="zmdi zmdi-assignment-account"></i> نام کاربری :  @Model.UserName </li>
                            <li> <i class="zmdi zmdi-email"></i> ایمیل : @Model.Email </li>
                            <li> <i class="zmdi zmdi-calendar-check"></i> تاریخ عضویت : @Model.RegisterDate.ToShamsi() </li>
                            <li> <i class="zmdi zmdi-money"></i> موجودی حساب : @Model.Wallet.ToString("#,0 تومان")  </li>
                        </ul>
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>