@using ElectronicLearn.Core.DTOs
@model InsertEpisodeViewModel
@{
    ViewData["Title"] = "افزودن قسمت جدید";
}


<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="">الکترونیک لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
    </ul>
</nav>

<div class="user-account">
    <div class="row">
        <div class="col-md-3 col-sm-4 col-xs-12">
            <partial name="_UserPanelSidebarPartial" />
        </div>
        <div class="col-md-9 col-sm-8 col-xs-12">
            <section class="user-account-content">
                <header><h1> @ViewData["Title"] </h1></header>
                <div class="inner form-layer">
                    <form asp-action="InsertEpisode" method="post" enctype="multipart/form-data">

                        @* @if (ViewBag.IsSuccess == true)
                        {
                        <div class="alert alert-success">
                        پروفایل شما با موفقیت ویرایش شد.
                        </div>
                        } *@

                        <div class="text-danger mb-4" asp-validation-summary="All"></div>

                        <input asp-for="CourseId" type="hidden" />
                        <input asp-for="EpisodeFileName" type="hidden" />

                        <div class="row">
                            <div class="col-md-7 col-sm-8 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-text" id="episode-title"><i class="zmdi zmdi-file-text"></i></span>
                                    <input asp-for="CourseEpisodeTitle" type="text" class="form-control" placeholder="عنوان" aria-describedby="episode-title">
                                </div>
                            </div>
                            <div class="col-md-7 col-sm-8 col-xs-12">
                                <div class="input-group">
                                    <span class="input-group-text" id="episode-time"><i class="zmdi zmdi-time"></i></span>
                                    <input asp-for="EpisodeTime" type="text" class="form-control" placeholder="00:00:00" aria-describedby="episode-time">
                                </div>
                            </div>
                            @* <div class="col-md-7 col-sm-8 col-xs-12 mb-3">
                            <div class="input-group mb-0">
                            <span class="input-group-text" id="avatar"><i class="zmdi zmdi-image"></i></span>
                            <input asp-for="Avatar" class="form-control" aria-describedby="avatar">
                            </div>
                            <p class="mb-1">لطفا فقط تصویر انتخاب کنید.</p>
                            <img id="newImage" class="current-avatar img-thumbnail border border-1 border-dark" src="/img/UserAvatars/@Model.AvatarName" />
                            </div> *@
                            <div class="form-group mb-3">
                                <div class="checkbox">
                                    <label>
                                        <input asp-for="IsFree" type="checkbox"> رایگان
                                    </label>
                                </div>
                            </div>

                            <div data-url="@Url.Action("DropzoneTarget", "Master", new { courseId = Model.CourseId })" class="dropzone my-3" id="episodeDropzone">
                                <div class="fallback">
                                    <input type="file" name="episodeFiles" multiple/>
                                </div>
                            </div>

                            <div class="col-md-7 col-sm-8 col-xs-12">
                                <button id="SubmitBtn" class="btn btn-success"> افزودن </button>
                            </div>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function DropzoneParameterName() {
            return 'episodeFiles'
        }

        Dropzone.options.episodeDropzone = {
            url: $("#episodeDropzone").attr("data-url"),
            parallelUploads: 1,
            maxFiles: 1,
            uploadMultiple: false,
            maxFilesize: 5242880000,
            acceptedFiles: 'image/*, .pdf, .rar, .zip',
            addRemoveLinks: true,
            paramName: DropzoneParameterName,
            init: function () {
                this.on("error",
                    function (file, message) {
                        Swal.fire({
                            title: 'خطا!',
                            text: message,
                            icon: 'error',
                            confirmButtonText: 'Ok'
                        });
                    });
                this.on("sending",
                    function (file) {
                        $("#SubmitBtn").prop("disabled", true);
                    });
                this.on("queuecomplete",
                    function (file) {
                        $("#SubmitBtn").prop("disabled", false);
                    });
                this.on("success",
                    function (file, response) {
                        if (response.status === "success") {
                            $("#EpisodeFileName").val(response.data);
                        } else {
                            Swal.fire({
                                title: 'خطا!',
                                text: 'عملیات با خطا مواجه شد.',
                                icon: 'error',
                                confirmButtonText: 'Ok'
                            });
                        }
                    });
                this.on("maxfilesreached",
                    function (file) {
                        this.removeEventListeners();
                    });
            }
        }
    </script>
}