@using ElectronicLearn.DataLayer.Entities.Question;
@model Question

@{
    ViewData["Title"] = "ثبت سوال";
}

<h1 class="fs-4 mb-4">ثبت سوال</h1>

<div class="row">
    <div class="col col-12 col-md-9 col-lg-8">
        <form asp-action="CreateQuestion">

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="CourseId" />

            <div class="form-group mb-3">
                <label asp-for="QuestionTitle" class="control-label"></label>
                <input asp-for="QuestionTitle" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="QuestionBody" class="control-label"></label>
                <textarea asp-for="QuestionBody" class="form-control"></textarea>
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="ثبت سوال" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('QuestionBody', {
            customConfig: '/js/Config.js'
        });
    </script>
}