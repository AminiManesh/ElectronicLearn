@using ElectronicLearn.DataLayer.Entities.Course;
@model Tuple<List<CourseComment>, int>
@{
    Layout = null;
}

@foreach (var comment in Model.Item1)
{
    <div class="comment-row">
        <img src="/img/UserAvatars/@comment.User.Avatar">
        <div class="left-col">
            <h3> @comment.User.UserName </h3>
            <span>@comment.CreateDate</span>
            <p>
                @comment.Comment
            </p>
        </div>
    </div>
}

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.Item2; i++)
        {
            <li class="page-item"><a class="page-link" onclick="CommentPage(@i)">@i</a></li>
        }
    </ul>
</nav>