@using ElectronicLearn.Core.Convertors;
@model ElectronicLearn.DataLayer.Entities.Course.Course;
@{
    ViewData["Title"] = Model.CourseTitle;
}

<section class="term-content">
    <header><h1> @Model.CourseTitle </h1></header>
    <div class="row">

        <div class="col-md-8 col-sm-12 col-xs-12 pull-left">
            <section class="term-description">
                <img src="/Courses/Image/@Model.CourseImageName">

                <h2> ربات تلگرام برای چه کاری مفید است ؟ </h2>
                <p>
                    @Html.Raw(Model.CourseDescription)
                </p>

                <h2> سرفصل های این دوره : </h2>
                <ul>
                    @foreach (var episode in Model.CourseEpisodes)
                    {
                        <li>
                            <h3> @episode.CourseEpisodeTitle </h3>
                            @if (episode.IsFree)
                            {
                                <i> رایگان </i>
                            }
                            else
                            {
                                <i> نقدی </i>
                            }
                            <span>@episode.EpisodeTime</span>
                        </li>
                    }
                </ul>
            </section>

            <section class="user-comments">
                <header><h3> نظرات کاربران </h3></header>
                <div class="inner">
                    <form>
                        <div class="row">
                            <div class="col-md-4 col-sm-12 col-xs-12">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="نام و نام خانوادگی">
                                </div>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="ایمیل">
                                </div>
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="شماره تماس">
                                </div>
                            </div>
                            <div class="col-md-8 col-sm-12 col-xs-12">
                                <div class="input-group mb-3">
                                    <textarea class="form-control" placeholder="متن نظر"></textarea>
                                </div>
                                <div class="row">
                                    <div class="col-md-8 col-sm-7 col-xs-7">
                                        <div class="input-group mb-3">
                                            <input type="text" class="form-control" placeholder="کد امنیتی">
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-5 col-xs-5">
                                        <img src="/img/captcha.jpg">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-12">
                                <button type="submit" class="btn btn-success"> ثبت دیدگاه </button>
                            </div>
                        </div>
                    </form>

                    <div class="comment-list">
                        <!-- row -->
                        <div class="comment-row">
                            <img src="/img/UserAvatars/avatar.jpg">
                            <div class="left-col">
                                <h3> میترا رحیمی </h3>
                                <span>12/03/1397</span>
                                <p>
                                    لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است
                                </p>
                            </div>
                        </div>
                        <!-- /row -->
                        <!-- row -->
                        <div class="comment-row">
                            <img src="/img/UserAvatars/avatar.jpg">
                            <div class="left-col">
                                <h3> میترا رحیمی </h3>
                                <span>12/03/1397</span>
                                <p>
                                    لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است. چاپگرها و متون بلکه روزنامه و مجله در ستون و سطرآنچنان که لازم است
                                </p>
                            </div>
                        </div>
