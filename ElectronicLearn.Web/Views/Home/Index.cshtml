@using ElectronicLearn.Core.DTOs;
@model List<CourseListItemViewModel>
@{
    ViewData["Title"] = "صفحه اصلی";
}

@section Landing {
    <header>
        <a asp-action="Index" asp-controller="Home" class="logo"><img src="/img/logo.png"></a>
        <h1> با اساتید مجرب و کارآزموده در خودآموز الکترونیک لرن </h1>
        <h2> آموزش ببینید ، تجربه کسب کنید و بازار کار شوید </h2>
        <h3> با کمترین هزینه خودت یاد بگیر </h3>
    </header>
    <div class="search-form">
        <form asp-controller="Course" asp-action="Index" method="get">
            <input type="text" name="filter" id="mainFilter" placeholder="چی دوست داری یاد بگیری ؟">
            <button><i class="zmdi zmdi-search"></i></button>
        </form>
    </div>
}

<main>
    <section class="terms-items">
        <header>
            <h2> آخرین دوره های الکترونیک لرن </h2>
            <a asp-controller="Course" asp-action="Index"> مشاهده همه دوره ها </a>
        </header>
        <div class="row">
            <cache expires-after="@TimeSpan.FromMinutes(30)">
                @await Component.InvokeAsync("LastCoursesComponent");
            </cache>
        </div>
    </section>

    <hr>

    <section class="terms-items">
        <header>
            <h2> دوره های محبوب الکترونیک لرن </h2>
            <a href=""> مشاهده همه دوره ها </a>
        </header>
        <div class="row">
            <cache expires-after="@TimeSpan.FromDays(1)">
                @await Component.InvokeAsync("PopularCoursesComponent")
            </cache>
        </div>
    </section>
</main>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#mainFilter').autocomplete({
                source: 'api/courseapi/search'
            })
        });
    </script>
}