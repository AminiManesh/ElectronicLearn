@model ElectronicLearn.Core.DTOs.LoginViewModel
@{
    ViewData["Title"] = "ورود";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Home" asp-area="">الکترونیک لرن</a></li>
        <li class="breadcrumb-item active" aria-current="page">ورود به سایت</li>
    </ul>
</nav>

<main class="client-page">
    <div class="container-content">

        <header><h2> ورود به سایت </h2></header>

        <div class="form-layer">

            <form asp-route="Login" method="post">

                @if (ViewBag.IsSuccess != null && ViewBag.IsSuccess == true)
                {
                    <div class="alert alert-success">
                        <p>با موفقیت وارد حساب کاربری خود شدید.</p>
                    </div>

                    <script>
                        var delay = 3000;
                        setTimeout(function () { window.location = "@Context.Request.Scheme" + "://" + "@Context.Request.Host" + "/UserPanel"; }, delay);
                    </script>
                }

                @if (Context.Request.Query["EditProfile"].ToString() == "true")
                {
                    <div class="alert alert-info">
                        به دلیل ویرایش پروفایل و بارگذاری مجدد اطلاعات، لطفا دوباره لاگین کنید.
                    </div>
                }

                <div asp-validation-summary="All" class="text-danger">
                </div>

                <div class="input-group">
                    <span class="input-group-text" id="email-address"><i class="zmdi zmdi-email"></i></span>
                    <input asp-for="Email" type="text" class="form-control" placeholder="ایمیل" aria-describedby="email-address">
                </div>

                <div class="input-group">
                    <span class="input-group-text" id="password"><i class="zmdi zmdi-lock"></i></span>
                    <input asp-for="Password" type="password" class="form-control" placeholder="رمز عبور " aria-describedby="password">
                </div>

                <div class="remember-me form-group form-check">
                    <label class="form-check-label user-select-none">
                        <input class="form-check-input vertical-center" asp-for="RememberMe" type="checkbox"> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>

                <div class="link">
                    <a asp-route="ForgotPassword"> <i class="zmdi zmdi-lock"></i> رمز عبور خود را فراموش کرده ام !</a>
                    <a asp-route="Register"> <i class="zmdi zmdi-account"></i> عضویت در سایت </a>
                </div>

                <button class="btn btn-success"> ورود به سایت </button>

            </form>
        </div>

    </div>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}